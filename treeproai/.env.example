# GENERAL
NODE_ENV=development

# PHASE 1: DATABASE & REDIS
# For docker-compose, use: postgres://postgres:postgres@postgres:5432/treeproai
DATABASE_URL="postgres://postgres:postgres@localhost:5432/treeproai"
# For docker-compose, use: redis://redis:6379
REDIS_URL="redis://localhost:6379"
# Generate with `openssl rand -base64 32`
PII_ENCRYPTION_KEY=

# PHASE 2: S3 (MINIO FOR LOCAL DEV)
# For docker-compose, use: http://minio:9000
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="treeproai"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"

# PHASE 2: AUTH (CLERK)
# Get these from your Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
# This is the webhook signing secret from Clerk
CLERK_WEBHOOK_SECRET=

# PHASE 3: AI SERVICES
# These are the internal Docker network hostnames
AI_VISION_URL=http://ai-vision:8000
AI_PRICING_URL=http://ai-pricing:8001

# PHASE 5: FRONTEND
# The public URL of your web app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# PHASE 6: PAYMENTS & COMMS
# Get these from your Stripe dashboard (use test keys)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Get these from Resend/Twilio
RESEND_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# PHASE 7: MAPS/GEO
GOOGLE_MAPS_API_KEY=

# PHASE 8: OBSERVABILITY
SENTRY_DSN=